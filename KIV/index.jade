doctype 
html(lang="en" data-ng-app="DebateCoaching")
  head
    title Debate Tutoring
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="css/normalize.css")
    link(rel="stylesheet", href="css/skeleton.css")
    link(rel="stylesheet", href="//fonts.googleapis.com/css?family=Raleway:400,300,600")
    link(rel="icon" type="image/png" href="favicon.png")
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js')
    script(src='myNgApp/UserController.js')

  body.container-fluid(ng-controller="UserController")
    div.section.hero
      if (!user)
        div.container
          h2 Debate Coaching
          form(action="/oldUser" method="post")
            h3 Sign In
            div.row
              div.six.columns
                label(for="nameField") Username
                input.u-full-width#nameField(type="text" name="userName")
                label(for="passField") Password
                input.u-full-width#nameField(type="text" name="password")
            input.button-primary(type="submit",value="Return")

          form(action="/auth/google" method="get")
            h3 New User?
            div.row
              div.six.columns
                label(for="nameField") Sign Up
            input.button-primary(type="submit",value="Sign in with Google!")
      else
        h2 user.name




        
